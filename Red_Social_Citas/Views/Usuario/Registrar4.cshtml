@model Dominio.Core.Entities.Actividad

@{
    ViewBag.Title = "Registro4";
}

<div class="row">
    <div class="col-md-8">
        <h2>Informacion personal</h2>
        <p>Esta pequeña encuesta nos ayudara a encontrarte personas compatibles contigo</p>
    </div>

    <div class="col-md-4">
        <div class="progress" style="margin:40px;">
            <div class="progress-bar" role="progressbar" aria-valuenow="50"
                 aria-valuemin="0" aria-valuemax="100" style="width:50%;">
                50%
            </div>
        </div>
    </div>
</div>
@using (@Html.BeginForm("Registrar5", "Usuario", FormMethod.Post))
{

    <div class="row">
        <div class="pregunta">
            <h3>¿Cúal de estas actividades realizas más en tu tiempo libre?</h3>
            <div class="opcion">
                @foreach (var actividad in ViewBag.actividades as List<Dominio.Core.Entities.Actividad>)
                {
                    @Html.RadioButtonFor(model => model.cod_act, actividad.cod_act)
                    @actividad.desc_act
                    <br />
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="pregunta">
            <h3>¿Cuanto es tu ingreso mensual aproximado?</h3>
            <div class="opcion">
                @Html.DropDownList("con_ing", (SelectList)@ViewBag.ingresos)
            </div>
        </div>
        <div class="col-md-offset-8">
            <input type="submit" value="Siguiente" />
        </div>
    </div>
}

