@model Dominio.Core.Entities.Cualidad

@{
    ViewBag.Title = "Registro3";
}

<div class="row">
    <div class="col-md-8">
        <h2>Informacion personal</h2>
        <p>Esta pequeña encuesta nos ayudara a encontrarte personas compatibles contigo</p>
    </div>

    <div class="col-md-4">
        <div class="progress" style="margin:40px;">
            <div class="progress-bar" role="progressbar" aria-valuenow="37.5"
                 aria-valuemin="0" aria-valuemax="100" style="width:37.5%;">
                37.5%
            </div>
        </div>
    </div>
</div>
@using (@Html.BeginForm("Registrar4", "Usuario", FormMethod.Post))
{
    <div class="row">
        <div class="pregunta">
            <h3>¿Tienes hijos?</h3>
            <div class="opcion">
                <select name="hijos_usu">
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5 a más</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="pregunta">
            <h3>¿Cuáles son tus principales cualidades?</h3>
            <div class="opcion">
                @foreach (var cualidad in ViewBag.cualidades as List<Dominio.Core.Entities.Cualidad>)
                {
                    <input type="checkbox" name="cod_cua" value="@cualidad.cod_cua">@cualidad.desc_cua

                    <br />
                }
            </div>
        </div>
        <div class="col-md-offset-8">
            <input type="submit" value="Siguiente" />
        </div>
    </div>
}

