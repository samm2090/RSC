@{
    ViewBag.Title = "PerfilCompleto";
    Layout = "~/Views/Shared/_Login-Layout.cshtml";
    Dominio.Core.Entities.Usuario usuario = (Dominio.Core.Entities.Usuario)Session["usuario"];
}
<div class="row">
    <div class="col-md-3 col-md-offset-2">
        <h2>Mi Perfil Completo</h2>
        @using (@Html.BeginForm("ActualizarDatos", "Usuario", FormMethod.Post))
        {
            <table style="border-collapse:separate;border-spacing:5px" class="table-bordered">
                <tr>
                    <td><img id="foto1" src="~/Fotos/@usuario.foto" width="242" height="200" /></td>
                    <td>
                        <table style="border-collapse:separate;border-spacing:5px">
                            <tr>
                                <td>
                                    <input type="submit" name="actualizar" value="Actualizar Datos" />
                                </td>
                        </table>
                    </td>
                </tr>


                <tr>
                    <td class="negrita">Nombre: </td>
                    <td><input type="text" name="nom_usu" value="@usuario.nom_usu"></td>
                </tr>
                <tr>
                    <td class="negrita">Apellidos Paterno: </td>
                    <td><input type="text" name="apePat_usu" value="@usuario.apePat_usu"></td>
                </tr>
                <tr>
                    <td class="negrita">Apellido Materno: </td>
                    <td><input type="text" name="apeMat_usu" value="@usuario.apeMat_usu"></td>
                </tr>
                <tr>
                    <td class="negrita">Edad: </td>
                    <td>@usuario.calcularEdad(@usuario.fecNac_usu)</td>
                </tr>
                <tr>
                    <td class="negrita">Fecha de registro: </td>
                    <td>@usuario.fecReg_usu</td>
                </tr>
                <tr>
                    <td class="negrita">Sexo: </td>
                    <td>@usuario.sexo_usu</td>
                </tr>
                <tr>
                    <td class="negrita">Correo: </td>
                    <td>@usuario.email_usu</td>
                </tr>
            </table>
        }
    </div>

    <div class="col-md-5 col-md-offset-1" style="margin-top:24px">
        <h2>Informacion personal</h2>

        <table style="border-collapse:separate;border-spacing:10px" class="table-bordered">
            <tr>
                <td class="negrita">Talla: </td>
                <td>@ViewBag.talla</td>
            </tr>
            <tr>
                <td class="negrita">Estado Civil: </td>
                <td>@ViewBag.estCiv</td>
            </tr>
            <tr>
                <td class="negrita">Rasgo cultural: </td>
                <td>@ViewBag.rasgo</td>
            </tr>
            <tr>
                <td class="negrita">Contextura: </td>
                <td>@ViewBag.contextura</td>
            </tr>
            <tr>
                <td class="negrita">Actividad favorita: </td>
                <td>@ViewBag.actividad</td>
            </tr>
            <tr>
                <td class="negrita">Cualidades principales: </td>
                <td>
                    @foreach (var cua in ViewBag.cualidades)
                    {
                        @cua <br />
                    }
                </td>
            </tr>
        </table>
    </div>

</div>
