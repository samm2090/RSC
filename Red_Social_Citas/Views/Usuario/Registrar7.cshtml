@{
    ViewBag.Title = "Registro7";
}

<div class="row">
    <div class="col-md-8">
        <h2>Tus intereses</h2>
        <p>Esta pequeña encuesta nos ayudara a encontrarte personas compatibles contigo</p>
    </div>

    <div class="col-md-4">
        <div class="progress" style="margin:40px;">
            <div class="progress-bar" role="progressbar" aria-valuenow="87.5"
                 aria-valuemin="0" aria-valuemax="100" style="width:87.5%;">
                87.5%
            </div>
        </div>
    </div>
</div>
@using (@Html.BeginForm("Registrar8", "Usuario", FormMethod.Post))
{

    <div class="row">
        <div class="pregunta">
            <h3>¿Qué ccualidades debería tener tu pareja?</h3>
            <div class="opcion">
                @foreach (var cualidad in ViewBag.cualidades as List<Dominio.Core.Entities.Cualidad>)
                {
                    <input type="checkbox" name="cod_cua" value=@cualidad.cod_cua>@cualidad.desc_cua
                    <br />
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="pregunta">
            <h3>
                ¿Te importaría que tu pareja ganase menos que tú?
            </h3>
            <div class="opcion">
                <input type="radio" name="cod_ing" value="Si" />Si
                <br />
                <input type="radio" name="cod_ing" value="No" />No
            </div>
        </div>

        <div class="col-md-offset-8">
            <input type="submit" value="Siguiente" />
        </div>
    </div>
}

