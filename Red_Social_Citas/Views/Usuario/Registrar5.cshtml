@model Dominio.Core.Entities.Rasgo

@{
    ViewBag.Title = "Registro5";
}

<div class="row">
    <div class="col-md-8">
        <h2>Tus intereses</h2>
        <p>Esta pequeña encuesta nos ayudara a encontrarte personas compatibles contigo</p>
    </div>

    <div class="col-md-4">
        <div class="progress" style="margin:40px;">
            <div class="progress-bar" role="progressbar" aria-valuenow="62.5"
                 aria-valuemin="0" aria-valuemax="100" style="width:62.5%;">
                62.5%
            </div>
        </div>
    </div>
</div>
@using (@Html.BeginForm("Registrar6", "Usuario", FormMethod.Post))
{

    <div class="row">
        <div class="pregunta">
            <h3>¿Que estatura debería tener tu pareja ideal?</h3>
            <div class="opcion">
                @Html.DropDownList("cod_talla_ran", (SelectList)@ViewBag.tallaRangos)
            </div>
        </div>
    </div>

    <div class="row">
        <div class="pregunta">
            <h3>
                ¿Qué rasgo fisico debería tener tu pareja ideal?
            </h3>
            <div class="opcion">
                @foreach (var rasgo in ViewBag.rasgos as List<Dominio.Core.Entities.Rasgo>)
                {
                    @Html.RadioButtonFor(model => model.cod_rasgo, rasgo.cod_rasgo)
                    @rasgo.desc_rasgo
                    <br />
                }
            </div>

        </div>
        <div class="col-md-offset-8">
            <input type="submit" value="Siguiente" />
        </div>
    </div>
}

